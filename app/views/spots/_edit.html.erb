<%= form_for(@spot) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address1 %>
  <%= f.text_field :address1 %>

  <%= f.label :address2 %>
  <%= f.text_field :address2 %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :postcode %>
  <%= f.text_field :postcode %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Save changes", class: "btn btn-primary" %>   
  <% if current_user.admin? %>
    <%= link_to "Delete", @spot, method: :delete, confirm: "You sure?", class: "btn btn-danger" %>
  <% end %>
<% end %>